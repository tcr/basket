{
  "name": "Create React Typescript Sass Webextension",
  "description": "Boilerplate for building webextension targeting Chrome & Firefox with react, typescript and sass",

  "icons": {
    "16": "static/logo.png",
    "48": "static/logo.png",
    "128": "static/logo.png"
  },

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "sidebar_action": {
    "default_icon": {
      "19": "static/logo.png",
      "38": "static/logo.png"
    },
    "browser_style": true,
    "default_title": "Tab Basket",
    "default_panel": "popup.html"
  },

  "permissions": [
    "tabs", "clipboardWrite", "webNavigation"
  ],

  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
